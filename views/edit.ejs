<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="create-blog content">
    <form action="/posts/edit/<%= post._id %>" method="POST">
        <label for="title">post title:</label>
      <input type="text" id="title" name="title" value="<%= post.title %>" required>
      <label for="snippet">post snippet:</label>
      <input type="text" id="snippet" name="snippet" value="<%= post.snippet %>" required>
      <label for="body">post body:</label>
      <textarea id="body" name="body" value="" required><%= post.body %></textarea>
      <button id="" >Submit</button>
    </form>
  </div>



  <%- include("./partials/footer.ejs") %>
</body>
</html>