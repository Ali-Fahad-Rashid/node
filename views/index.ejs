<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="blogs content">
  <% if (messages.success) { %>
    <%= messages.success %>
  <% } %>
    <% if (posts.length > 0) { %>
      <% posts.forEach(post => { %>
        <a class="single" href="/posts/<%= post._id %>">
          <h3 class="title"><%= post.title %></h3>
          <p class="snippet"><%= post.snippet %></p>
          <div class="details ">
          <img class='mmm' src="../uploads/<%= post.images[0] %>" height="70" width="70">
          </div>
        </a>
      <% }) %>
    <% } else { %>
      <p>There are no Posts to display...</p>
    <% } %>
    
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>